.chat-main
  .header-bar
    .left-box
      .group-name
        = @group.name
      .member-list
        Member :
        - @group.users.each do |user|
          = user.name
    = link_to edit_group_path(@group),class:"edit-btn-color" do
      .edit-btn
        Edit
  .window
    .messages
      = render @messages
  .messge-from
    //%form.new-message{action:"#", method:"post"}
    = form_for [@group, @message], html: {class: 'new-message'} do |f|
      .input-box
        //%input.text{type:"text", placeholder:"type a message"}
        = f.text_field :content, class: 'text', placeholder: 'type a message'
        //%label.image{for:"message_image"}
        = f.label :image, class: 'image' do
          //%i.fa.fa-image
          = icon('fas', 'image', class: 'icon')
          //%input#message_image.image_file{type:"file"}
          = f.file_field :image, class: 'image_file'
      //%input.send-btn{type:"submit", value:"send"}
      = f.submit 'Send', class: 'send-btn'